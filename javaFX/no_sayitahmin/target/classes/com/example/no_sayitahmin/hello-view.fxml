<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.no_sayitahmin.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="lbl" text="Sıfır ile yüz bir sayı tahmin edin!" textFill="RED">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Label>
   <TextField fx:id="txt">
      <font>
         <Font size="18.0" />
      </font>
   </TextField>
    <Button onAction="#tahminEt" text="Tahmin" textFill="#0a00ff">
      <font>
         <Font size="18.0" />
      </font></Button>
</VBox>
